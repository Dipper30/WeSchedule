/**app.wxss**/

page {
  background: #eff5f4;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  --title: #264e70;
  --bg: #bbd4ce;

}

.page {
  width: 100%;
  height: 100%;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 

button {
  background: initial;
}

button:focus{
  outline: 0;
}

button::after{
  border: none;
}

.ok-btn {
  background-color: #264e70;
  color: #fff;
  border-radius: 5px;
}

.no-btn {
  background-color: red;
  color: #fff;
  border-radius: 5px;
}


.card {
  display: flex;
	flex-direction: column;
	margin: 30rpx;
	background-color: white;
  border-radius: 10px;
}





.clearfix {
  content: "";
  clear: both;
}

