/**app.wxss**/



page {
  background: #ecf0f3;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  color: #333;
  --title: #264e70;
  --bg: #bbd4ce;
  --themeColor: #fdeee2;
  --lightThemeColor: #fff8f3;
  --deepYellow: #ffcf88;
  --lightYellow: #fff3c8;
  --orange: #ffa599;
  --lightBlue: #bbd4ce;
  --lightGreen: #72d58f;
  --deepBlue: #1e233a;
  --lightPurple: #ab8afa;

}

.page {
  width: 100%;
  height: 100%;
}

.nav-bar {
  width: 100%;
  height: 45px;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
  background: transparent;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 

button {
  background: initial;
}

button:focus{
  outline: 0;
}

button::after{
  border: none;
}

.ok-btn {
  background-color: #264e70;
  color: #fff;
  border-radius: 5px;
  text-align: center;
}

.no-btn {
  background-color: red;
  color: #fff;
  border-radius: 5px;
}


.card {
  display: flex;
	flex-direction: column;
	margin: 30rpx;
	background-color: white;
  border-radius: 10px;
}





.clearfix {
  content: "";
  clear: both;
}

