.list {
	display: flex;
	flex-direction: column;
}

.team-container {
	padding: 0 15px;
	background-color: #fff;
}

.loading-container {
	display: flex;
	flex-direction: row;
	justify-content: center;
	top: 50%;
	left: 50%;
	position: absolute;
	transform: translate(-50%, -50%);
	width: 200px;
	height: 100px;
}

.loading {
	width: 100%;
	display: flex;
	flex-direction: row;
	justify-content: center;
	text-align: center;
}
