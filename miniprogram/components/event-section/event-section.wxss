/* components/event-section/event-section.wxss */

.edit {
	display: flex;
	flex-direction: row;
	justify-content: stretch;
}

.display-title, .content {
	margin-top: 20px;
	display: flex;
	flex-direction: row;
	justify-content: stretch;
	overflow: hidden;
}

.hide-event .display-row{
	height: 0;
	overflow: hidden;
	transition: 0.4s ease;
}

.display-left {
	width: 40%;
}

.display-right {
	width: 60%;
	transition: 0.4s ease;
	overflow: hidden;
}




.left {
	width: 201rpx;
	display: flex;
}

.type-img {
	width: 128rpx;
	height: 128rpx;
	align-self: center;
	transform: translate(0, -50%);
}

.right {
	width: 472rpx;
}

.start, .end {
	display: flex;
	flex-direction: row;
}

.time-selector-container {
	display: flex;
	flex-direction: column;
}

.time-selector-row {
	display: flex;
	flex-direction: row;
}

van-row {
	font-size: 16px;
	letter-spacing: 0.1rem;
	min-height: 44px;
	height: 26px;
	display: block;
	line-height: 44px;
}

.van-cell {
	line-height: 30px;
}



.hide-type-menu {
	height: 0;
	overflow: hidden;
	transition: 0.4s ease;
}

.display-right .display-row {

	display: flex;
	flex-direction: row;
	height: 40px;
	transition: 0.4s ease;
}

.display-txt {
	width: 40%;
}

.display--value{
	width: 60%;
}

.display-type {
	width: 60%;
	display: flex;
	flex-direction: row;
}

.display-image {
	margin-left: 20px;
	width: 20px;
	height: 20px;
}

.icon-collapse {
	margin-left: 30px;
	width: 24px;
	height: 24px;
	transition: 0.4s ease;
}

.icon-show {
	margin-left: 30px;
	width: 24px;
	height: 24px;
	transform: rotate(90deg);
	transition: 0.4s ease;
}