<import src ="../../templates/team-type-icon/team-type-icon.wxml"/>

<view>
	<view class="row1">
		<view class="row1-left">
			<view class="avatar">
				<image src="../../images/avatar.png"></image>
			</view>
			<view class="name-wrapper">
				<view class="name">
					{{teamProfile.name}}
				</view>
				<view class="brief">
					<template is="teamTypeIcon" data="{{type: teamProfile.type}}" />
					<text>{{ teamProfile.type ? '长期团队' : '临时团队' }}</text>
				</view>
			</view>
		</view>
		<view class="row1-right">
			
		</view>
	</view>
</view>